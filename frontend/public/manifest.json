{
  "manifest_version": 3,
  "name": "React Vite Chrome Extension",
  "version": "1.0.0",
  "description": "A Chrome screen reader extension built with React, TypeScript, and Vite.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/ParrotIcon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/index.html", "dist/assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
